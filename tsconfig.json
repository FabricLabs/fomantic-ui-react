{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    // "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "lib": ["ESNext", "DOM"]
  },
  "exclude": [
    "**/**/__tests__/*",
    "**/**/_example/*",
    "**/**/style/*",
    "node_modules",
    "src/_common",
    "dist",
    "lib",
    "esm",
    "cjs",
    "es",
    "script"
  ],
  "compileOnSave": false
}
